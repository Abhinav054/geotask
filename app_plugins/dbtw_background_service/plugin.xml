<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.tsubik.cordova.dbtw_background_service"
    version="0.2.0">
    <name>DBTWBackgroundService</name>
    <description>Done by the way background service</description>
    <license>MIT</license>
    <keywords>phonegap,background geolocation</keywords>

    <engines>
        <engine name="cordova" version=">=3.0.0" />
    </engines>

    <js-module src="www/dbtw_background_service.js" name="dbtwBackgroundService">
        <clobbers target="dbtwBackgroundService" />
    </js-module>

    <dependency id="org.apache.cordova.geolocation" />

    <!-- android -->
    <platform name="android">
        <source-file src="src/android/BTWService.java" target-dir="src/com/tsubik/cordova/dbtw_background_service" />
        <source-file src="src/android/StartAppAtBootReceiver.java" target-dir="src/com/tsubik/cordova/dbtw_background_service" />
        <source-file src="src/android/TaskService.java" target-dir="src/com/tsubik/cordova/dbtw_background_service" />
        <source-file src="src/android/libs/android-support-v4.jar" target-dir="libs" />
        <source-file src="src/android/libs/google-play-services.jar" target-dir="libs" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="com.google.android.gms.version" android:value="5089000" />
            <service android:name="com.tsubik.cordova.dbtw_background_service.BTWService" android:enabled="true" android:process=":remote" />
            <service
                android:name="com.tsubik.cordova.dbtw_background_service.ReceiveTransitionsIntentService"
                android:label="@string/app_name"
                android:exported="false">
            </service>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <receiver
                android:name="com.tsubik.cordova.dbtw_background_service.StartAppAtBootReceiver">
                <intent-filter>
                    <action android:name="android.intent.action.BOOT_COMPLETED" />
                </intent-filter>
            </receiver>

        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
        </config-file>

     </platform>          

</plugin>
